<div class="container">
    <div class="my-2 row">
        <div class="col-12 d-flex justify-content-between">
            <button class="btn btn-secondary col-auto settings"><i class="bi bi-gear"></i></button>
            <div class="d-flex justify-content-center">
                        {{!-- logo --}}
                <img src="/assets/images/OffloadLogo.png" alt="Offload Logo" />
            </div>
            <button id="signoutBtn" class="btn btn-secondary col-auto"><i class="bi bi-door-closed-fill"></i></button>
        </div>
    </div>
    <div class="row">
        {{!-- posts --}}
        <div class="col-12 d-flex justify-content-center">
            {{!-- foreach card --}}
            {{!-- {{#for}} --}}
            <div class="card">
                <h5 class="card-header">{{postTitle}}</h5>
                <div class="card-body">
                    <img src="{{postImgUrl}}" alt="posted img" />
                    <p class="card-text">{{postDescription}}</p>
                    <a href="{{routeToPostersProfile}}" class="btn btn-primary">Posted by {{postersUsername}}</a>
                </div>
            </div>
            {{!-- {{/for}} --}}
        </div>
    </div>
    {{!-- bottom bar w/ home,user,post --}}
    <nav class="bg-light fixed-bottom justify-content-around navbar">
        <div class="d-flex justify-content-center">
            {{!-- homepage --}}
            <a class="m-2 mx-5" href="/">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-house-door-fill" viewBox="0 0 16 16">
                    <path
                        d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5z" />
                </svg>
            </a>
            {{!-- create a post --}}
            <a class="m-2 mx-5" href="/createPost">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path
                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
            </a>
            {{!-- user profile page --}}
            <a class="m-2 mx-5" href="/profile/{{username}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-people-fill" viewBox="0 0 16 16">
                    <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    <path fill-rule="evenodd"
                        d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z" />
                    <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                </svg>
            </a>
        </div>
    </nav>
</div>