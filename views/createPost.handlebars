<div class="row justify-content-center bg-secondary bg-opacity-75 rounded-5">
    {{!-- image upload --}}
    <div class="col-12 d-flex justify-content-center">
        {{!-- img upload cloudinary widget button--}}
        <button id="uploadImgBtn" type="button" class="btn btn-dark col-9 m-3">Upload Image</button>
    </div>

    {{!-- title --}}
    <div class="col-9 d-flex justify-content-center">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Add Title Here" id="addTitleInput" />
        </div>
    </div>

    {{!-- description --}}
    <div class="col-9 d-flex justify-content-center">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Add Description Here" id="addDescInput" />
        </div>
    </div>

    {{!-- Loaction --}}
    <div class="col-9 d-flex justify-content-center">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Add Location Here" id="addLocationInput" />
        </div>
    </div>

    {{!-- All free?
    <div class="col-9 d-flex justify-content-center">
