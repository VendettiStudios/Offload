<div class="row d-flex justify-content-center">
    <div class="col-12 d-flex justify-content-center">
        {{!-- logo --}}
        <img src="/assets/images/OffloadLogo.png" alt="Logo" />
    </div>

    {{!-- image upload --}}
    <div class="col-12 d-flex justify-content-center">
        {{!-- img upload cloudinary widget button--}}
        <button id="uploadImgBtn">Upload Image</button>

        {{!-- renders upladed image if it has been uploaded --}}
        {{!-- {{#if hasUploadedImg}}
            <img src="{{imgUrl}}" alt="Image" />
        {{/if}} --}}
    </div>

    {{!-- title --}}
    <div class="col-12 d-flex justify-content-center">
        <h3>Add Title</h3>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Add Title Here" id="addTitleInput" />
            <button class="btn btn-outline-secondary" type="button" id="addTitleBtn">+</button>
        </div>
    </div>

    {{!-- description --}}
    <div class="col-12 d-flex justify-content-center">
        <h3>Add Description</h3>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Add Description Here" id="addDescInput" />
            <button class="btn btn-outline-secondary" type="button" id="addDescBtn">+</button>
        </div>
    </div>

    {{!-- Loaction --}}
    <div class="col-12 d-flex justify-content-center">
        <h3>Add Location</h3>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Add Location Here" id="addLocationBtn" />
            <button class="btn btn-outline-secondary" type="button" id="addLocationBtn">+</button>
        </div>
    </div>

    {{!-- All free? --}}
    <div class="col-12 d-flex justify-content-center">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="isFreeSwitch" checked>
            <label class="form-check-label" for="isFreeSwitch">Every Item is Free [Unswitch if item costs are negotiable]</label>
        </div>
    </div>
</div>

{{!-- cloudinary widget --}}
<script 
    src="https://widget.cloudinary.com/v2.0/global/all.js" 
    type="text/javascript">
</script>

<script src="/assets/js/createPost.js"></script>