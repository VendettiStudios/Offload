<div id="post">
    <div id="topbar">
        <div id="votes">
            <div id="upvote">
                {{!-- uparrow --}}
            </div>
            <div id="votes">
                <p>{{post.votes}}</p>
            </div>
            <div id="downvote">
                {{!-- downarrow --}}
            </div>
        </div>
        <div id="title-username">
            <div id="title">
                <h1>{{post.title}}</h1>
            </div>
            <div id="username">
                <h3>{{post.username}}</h3>
            </div>
        </div>
    </div>
    <div id="description">
        <p>{{post.description}}</p>
    </div>
    <div id="images">
        {{#each images as |image|}}
            {{> images-list}}
        {{/each}}
    </div>
    <div id="comment-section">
        <input type="text" id="comment-input"/>
        <div id="comments">
            {{#each comments as |comment|}}
                <div>
                    <p>{{comment.username}}</p>
                    <p>{{comment.comment}}</p>
                </div>
            {{/each}}
        </div>
    </div>
</div>