<div class="container mb-5">
    <div class="bg-secondary my-5 rounded-5 row text-center">
        <h1 class="my-3 text-capitalize">{{user.username}}</h1>
        <h1>About Me</h1>
        <p>{{user.about}}</p>
        <h3>Phone</h3>
        <p>{{user.phone}}</p>
        <h3>Email</h3>
        <p>{{user.email}}</p>
    </div>
    <div class="activePosts justify-content-center row">
        <div class="my-1 text-center">
            <h1>My Posts</h1>
        </div>
        {{#each posts as |post|}}
                <div class="card m-3" style="width: 18rem;">
                    {{#if post.imagePath}}
                    <img class="card-img-top rounded-5 my-2" src="{{post.imagePath}}" alt="Card image cap">
                    {{/if}}
                    <div class="bg-opacity-25 bg-secondary card-body rounded-pill text-break text-center">
                        <p class="card-text">
                            <a href="/posts/{{post.postID}}">{{post.title}}</a>
                        </p>
                        <p>{{post.username}}</p>
                    </div>
                </div>
            {{/each}}
    </div>
</div>


{{!-- bottom bar w/ home,user,post --}}
